<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.jdt.ui.quickFixProcessors">
	
      <quickFixProcessor
            class="egap.quickfix.EgapQuickFixProcessor"
            id="egap.quickfix.EgapQuickFixProcessor"
            name="egap.quickfix.EgapQuickFixProcessor">
      </quickFixProcessor>
      
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="egap.preferences.EgapPreferencePage"
            id="egap.preferences.EgapPreferencePage"
            name="Egap">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="egap.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   
   <extension
			id="egap.EgapBuilder"
			name="Egap Project Builder"
			point="org.eclipse.core.resources.builders">
		<builder hasNature="true">
			<run class="egap.project_builder.EgapBuilder" />
		</builder>
	</extension>
	
	<extension
			id="egap.EgapNature"
			name="Egap Project Nature"
			point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="egap.nature.EgapNature" />
		</runtime>
		<builder id="egap.EgapBuilder" />
	</extension>
	
	<extension point="org.eclipse.ui.popupMenus">
		<objectContribution
				adaptable="true"
				id="egap.popupMenus"
				nameFilter="*"
				objectClass="org.eclipse.core.resources.IProject">
			<action
         class="egap.nature.EgapToggleNatureAction"
         enablesFor="+"
         icon="icons/egap_icon_big.png"
         id="egap.toggleNatureAction"
         label="Add/Remove Egap Nature"
         menubarPath="additions">
			</action>
		</objectContribution>
	</extension>
	
	<extension point="org.eclipse.ui.startup"></extension>
 <extension
       point="org.eclipse.ui.commands">
    <command
          categoryId="egap.category"
          id="egap.cycleBindings"
          name="Cycle Bindings">
    </command>
    <command
          categoryId="egap.category"
          id="egap.createMockitoJunitTest"
          name="Create JUnit Test with mocked dependencies">
    </command>
    <category
          id="egap.category"
          name="Egap">
    </category>
 </extension>
 <extension
       point="org.eclipse.ui.handlers">
    <handler
          class="egap.command.CycleBindingsHandler"
          commandId="egap.cycleBindings">
    </handler>
    <handler
          class="egap.command.CreateMockitoJUnitTestHandler"
          commandId="egap.createMockitoJunitTest">
    </handler>
 </extension>
 <extension
       point="org.eclipse.ui.bindings">
    <key
          commandId="egap.cycleBindings"
          contextId="org.eclipse.jdt.ui.javaEditorScope"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="M1+M2+V G">
    </key>
    <key
          commandId="egap.createMockitoJunitTest"
          contextId="org.eclipse.jdt.ui.javaEditorScope"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="M1+M2+V J">
    </key>
 </extension>
 

</plugin>
